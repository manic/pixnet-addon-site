<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", comment_datas_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_comment_data_path %></li>
    </ul>
  </div>
  <div class="content">
    <h2 class="title">Comment Data List</h2>
    <div class="inner">
      <table class="table">
        <tr>
          <th class="first">ID</th>
          <th> <%= CommentData.human_attribute_name(:content) %> </th>
          <th> 建立時間</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @comment_datas.each do |d| %>
        <tr class="odd">
          <td> <%= d.id %> </td>
          <td> <%= d.content %> </td>
          <td> <%= d.created_at %> </td>
          <td class="last">
            <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_comment_data_path(d) %> |
            <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", comment_data_path(d), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
          </td>
        </tr>
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
      </div>
    </div>
  </div>
</div>
